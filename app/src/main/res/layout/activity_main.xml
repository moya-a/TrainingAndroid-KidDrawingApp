<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/mainContextView"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">


  <FrameLayout
    android:id="@+id/frame_drawing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/background_drawing_view_layout"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageButton
    android:id="@+id/btn_show_Settings"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:contentDescription="Settings"
    android:src="@drawable/ic_icon_settings"
    app:layout_constraintLeft_toLeftOf="@id/frame_drawing"
    app:layout_constraintRight_toRightOf="@id/frame_drawing"
    app:layout_constraintTop_toTopOf="@id/frame_drawing" />

  <FrameLayout
    android:id="@+id/frame_setting"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="@id/frame_drawing"
    app:layout_constraintRight_toRightOf="@id/frame_drawing"
    app:layout_constraintTop_toTopOf="@id/frame_drawing" />

  <FrameLayout
    android:id="@+id/frame_dialog_brushSize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintLeft_toLeftOf="@id/frame_drawing"
    app:layout_constraintRight_toRightOf="@id/frame_drawing"
    app:layout_constraintTop_toTopOf="@+id/frame_drawing" />

</androidx.constraintlayout.widget.ConstraintLayout>