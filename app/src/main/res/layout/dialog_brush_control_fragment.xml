<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="10dp"
  android:background="@drawable/background_dialog_layout"
  android:gravity="end"
  android:orientation="vertical"
  android:padding="12dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/tv_sizeTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="Brush Preview :" />

    <TextView
      android:id="@+id/tv_brushPreview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:maxWidth="50dp"
      android:maxHeight="50dp" />
  </LinearLayout>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginBottom="10dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
      android:layout_width="50dp"
      android:layout_height="wrap_content"
      android:layout_weight="0"
      android:text="Size :" />

    <SeekBar
      android:id="@+id/sb_brushSize"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="10dp"
      android:layout_weight="1"
      android:indeterminate="false"
      android:max="50"
      android:min="5"
      android:tag="SIZE" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:gravity="end"
    android:orientation="horizontal">

    <TextView
      android:layout_width="50dp"
      android:layout_height="wrap_content"
      android:layout_weight="0"
      android:text="Red :" />

    <SeekBar
      android:id="@+id/sb_brushColorRed"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="10dp"
      android:layout_weight="1"
      android:indeterminate="false"
      android:max="255"
      android:min="0"
      android:tag="COLOR_RED" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:gravity="end"
    android:orientation="horizontal">

    <TextView
      android:layout_width="50dp"
      android:layout_height="wrap_content"
      android:layout_weight="0"
      android:text="Green :" />

    <SeekBar
      android:id="@+id/sb_brushColorGreen"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="10dp"
      android:layout_weight="1"
      android:indeterminate="false"
      android:max="255"
      android:min="0"
      android:tag="COLOR_GREEN" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:gravity="end"
    android:orientation="horizontal">

    <TextView
      android:layout_width="50dp"
      android:layout_height="wrap_content"
      android:layout_weight="0"
      android:text="Blue :" />

    <SeekBar
      android:id="@+id/sb_brushColorBlue"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="10dp"
      android:layout_weight="1"
      android:indeterminate="false"
      android:max="255"
      android:min="0"
      android:tag="COLOR_BLUE" />

  </LinearLayout>


  <ImageButton
    android:id="@+id/btn_brushDialog_hide"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp"
    android:contentDescription="Done"
    android:src="@drawable/ic_icon_close" />

</LinearLayout>